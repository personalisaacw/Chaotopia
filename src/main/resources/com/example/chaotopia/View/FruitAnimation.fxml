<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chaotopia.Extra.FruitAnimationController">
    <children>
        <VBox alignment="CENTER" layoutX="176.0" layoutY="14.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Fruit Animation Tester">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <ImageView fx:id="fruitImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Label text="Fruit Type:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="fruitTypeComboBox" prefWidth="150.0" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartAnimation" text="Start Animation" />
                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#handleStopAnimation" text="Stop Animation" />
                    </children>
                </HBox>
                <Label fx:id="statusLabel" text="Select a fruit type and press Start">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>