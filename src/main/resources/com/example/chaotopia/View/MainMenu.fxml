<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="600.0" maxWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" stylesheets="@../CSS/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chaotopia.Controller.MainMenuController">
   <styleClass>
      <String fx:value="default-background" />
      <String fx:value="container" />
   </styleClass>
   <center>
      <HBox maxHeight="600.0" maxWidth="1000.0" minHeight="600.0" minWidth="1000.0" prefHeight="600.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="32.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="title-board" stylesheets="@../CSS/styles.css" text="ChaoTopia" textAlignment="CENTER" textFill="#272744">
                     <font>
                        <Font name="Upheaval TT -BRK-" size="64.0" />
                     </font>
                  </Label>
                  <Region prefHeight="36.0" prefWidth="100.0" />
                  <Button mnemonicParsing="false" onAction="#newGame" styleClass="btn" stylesheets="@../CSS/styles.css" text="Play" textAlignment="CENTER" textFill="#272744">
                     <font>
                        <Font name="Upheaval TT -BRK-" size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#tutorial" styleClass="btn" stylesheets="@../CSS/styles.css" text="Tutorial" textFill="#272744">
                     <font>
                        <Font name="Upheaval TT -BRK-" size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#parentalControls" styleClass="btn" stylesheets="@../CSS/styles.css" text="Parental Controls" textFill="#272744" wrapText="true">
                     <font>
                        <Font name="Upheaval TT -BRK-" size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleExitButton" styleClass="btn" stylesheets="@../CSS/styles.css" text="Exit" textFill="#272744">
                     <font>
                        <Font name="Upheaval TT -BRK-" size="24.0" />
                     </font>
                  </Button>
                  <VBox alignment="BOTTOM_LEFT" maxHeight="110.0" translateY="-200.0">
                     <children>
                        <ImageView fitHeight="200.0" fitWidth="200.0">
                           <image>
                              <Image url="@../Assets/Board/names.png" />
                           </image>
                        </ImageView>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" scaleZ="0.0">
                           <image>
                              <Image url="@../Assets/MainMenu/CreatedFor.png" />
                           </image>
                        </ImageView>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
