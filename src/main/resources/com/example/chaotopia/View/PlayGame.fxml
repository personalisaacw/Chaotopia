<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/PlayGame.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chaotopia.Controller.PlayGameController">
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#goBack" prefHeight="40.0" prefWidth="40.0" styleClass="back-button" />
      <Label layoutX="173.0" layoutY="20.0" prefHeight="73.0" prefWidth="254.0" styleClass="title-label" />

      <Button fx:id="slot1Button" layoutX="50.0" layoutY="134.0" onAction="#handleSlot1Click" styleClass="save-slots">
            <graphic>
                  <ImageView fx:id="slot1Image" fitHeight="160" fitWidth="120" />
            </graphic>
      </Button>

      <Button fx:id="slot2Button" layoutX="230.0" layoutY="134.0" onAction="#handleSlot2Click" styleClass="save-slots">
            <graphic>
                  <ImageView fx:id="slot2Image" fitHeight="160" fitWidth="120" />
            </graphic>
      </Button>

      <Button fx:id="slot3Button" layoutX="410.0" layoutY="134.0" onAction="#handleSlot3Click" styleClass="save-slots">
            <graphic>
                  <ImageView fx:id="slot3Image" fitHeight="160" fitWidth="120" />
            </graphic>
      </Button>

      <Button layoutX="100.0" layoutY="311.0" mnemonicParsing="false" onAction="#deleteSlot1" prefHeight="40.0" prefWidth="40.0" styleClass="trash-button" />
      <Button layoutX="280.0" layoutY="311.0" mnemonicParsing="false" onAction="#deleteSlot2" prefHeight="40.0" prefWidth="40.0" styleClass="trash-button" />
      <Button layoutX="460.0" layoutY="311.0" mnemonicParsing="false" onAction="#deleteSlot3" prefHeight="40.0" prefWidth="40.0" styleClass="trash-button" />
</AnchorPane>
