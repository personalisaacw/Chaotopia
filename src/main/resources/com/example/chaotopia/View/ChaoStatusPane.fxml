<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.chaotopia.Extra.GameplayAnimationController"
            fx:id="mainContainer"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #e8d0aa;">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label fx:id="nameLabel" text="CHAO NAME"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333366;"/>
        </VBox>
    </top>

    <center>
        <HBox alignment="CENTER" spacing="20">
            <!-- Chao Image Container -->
            <StackPane style="-fx-background-color: #ccaa88; -fx-border-color: #886644; -fx-border-width: 3; -fx-border-radius: 5;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <ImageView fx:id="chaoImageView" fitHeight="150" fitWidth="150" preserveRatio="true"/>
            </StackPane>

            <!-- Status Bars Container -->
            <VBox fx:id="statusBarsContainer" spacing="10" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <!-- DrawBars will be added here programmatically -->
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <Label fx:id="scoreLabel" text="SCORE: 0"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333366;"/>

            <HBox alignment="CENTER" spacing="15">
                <Button text="Feed" onAction="#feedChao"
                        style="-fx-background-color: #90EE90; -fx-font-weight: bold;"/>
                <Button text="Play" onAction="#playWithChao"
                        style="-fx-background-color: #FFD700; -fx-font-weight: bold;"/>
                <Button text="Sleep" onAction="#letChaoSleep"
                        style="-fx-background-color: #87CEFA; -fx-font-weight: bold;"/>
                <Button text="Heal" onAction="#healChao"
                        style="-fx-background-color: #FF6347; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>