<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chaotopia.HelloController">
    <center>
        <ImageView fx:id="characterImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </center>
    <right>
        <VBox fx:id="controlPanel" prefWidth="250.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </right>
    <bottom>
        <Label fx:id="statusLabel" text="Status: Ready" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </bottom>
</BorderPane>